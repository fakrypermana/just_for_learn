<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_motto"
            android:layout_margin="10dp"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@drawable/img_depan"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:src="@drawable/img_desc"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_login_facebook"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_buttin_facebook_blue"
                android:text="Login dengan Facebook"
                android:textColor="#ffffff"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btn_login_google"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_button_google"
                android:text="Login dengan Google"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="10">

                <Button
                    android:id="@+id/btn_to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_gravity="left"
                    android:layout_marginLeft="2dp"
                    android:text="Login"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat"
                    android:layout_weight="5"/>

                <Button
                    android:id="@+id/btn_to_regist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_gravity="right"
                    android:layout_marginRight="2dp"
                    android:text="Register"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:layout_weight="5"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>