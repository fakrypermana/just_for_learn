<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.profile.ProfileActivity">

    <RelativeLayout
        android:id="@+id/rellays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_black_24dp"
                android:background="@null"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:id="@+id/img_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_border_profile">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user_profil"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle_wrap_profile"
                    android:padding="3dp"
                    android:src="@drawable/profilsaya" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_nama_user_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="32sp"
                android:text="Nama User"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tv_biodata_user_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="12sp"
                android:text="Biodata"
                android:textAlignment="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80FFFFFF"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_location_on_black_24dp"/>

                <TextView
                    android:id="@+id/tv_alamat_user_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="Alamat user"
                    android:textColor="@color/colorPrimaryLight"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nomor_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_local_phone_black_24dp"/>

                <TextView
                    android:id="@+id/tv_nomor_user_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="Nomor telepon User"
                    android:textColor="@color/colorPrimaryLight"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_email_black_24dp"
                    android:layout_marginRight="3dp"/>

                <TextView
                    android:id="@+id/tv_email_user_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email user"
                    android:textColor="@color/colorPrimaryLight"/>

            </LinearLayout>

        </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#80FFFFFF"
                android:layout_margin="9dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:layout_marginTop="9dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_point_profil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="17"
                                android:textSize="24sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryLight"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Point"
                                android:textSize="11sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryLight"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_pertanyaan_profil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="46"
                                android:textSize="24sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryLight"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pertanyaan"
                                android:textSize="11sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryLight"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_jawaban_profil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="36"
                                android:textSize="24sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryLight"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jawaban"
                                android:textSize="11sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryLight"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_vote_profil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="98"
                                android:textSize="24sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryLight"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vote"
                                android:textSize="11sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimaryLight"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    


</RelativeLayout>