<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3px"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:gravity="top">

            <TextView
                android:id="@+id/tv_nama_related_job"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:text="Nama Pekerjaan"
                android:layout_gravity="start"
                android:gravity="start"
                android:textColor="@color/colorDarkBlack"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="end">

                <Button
                    android:id="@+id/btn_simpan_related_job"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:gravity="top|end"
                    android:background="@drawable/ic_bookmark_border_black_24dp"
                    android:textColor="@color/colorPrimaryLight"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="3dp">

            <ImageView
                android:id="@+id/iv_cover_related_job"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_gravity="start"
                android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salary"
                        android:textSize="8sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_gravity="bottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp."
                            android:textColor="@color/colorAccentRed"/>

                        <TextView
                            android:id="@+id/tv_salary_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gaji min"
                            android:textColor="@color/colorAccentRed">
                        </TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccentRed"
                            android:text=" - "
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp."
                            android:textColor="@color/colorAccentRed"/>

                        <TextView
                            android:id="@+id/tv_salary_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gaji max"
                            android:textColor="@color/colorAccentRed"/>

                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="bottom">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom|end">

                <Button
                    android:id="@+id/btn_lihat_detail_related"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Lihat Detail"
                    android:background="@null"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="false"
                    android:gravity="bottom"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>