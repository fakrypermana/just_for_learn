<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nama_related_job"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Nama Pekerjaan"
            android:textColor="@color/colorDarkBlack"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="3dp">

            <ImageView
                android:id="@+id/iv_cover_related_job"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_gravity="start"
                android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_salary_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gaji min"
                    android:textColor="@color/colorAccent">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentRed"
                    android:text=" - "
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"/>

                <TextView
                    android:id="@+id/tv_salary_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gaji max"
                    android:textColor="@color/colorAccent">
                </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="bottom">

            <Button
                android:id="@+id/btn_simpan_related_job"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:text="Simpan"
                android:background="@drawable/ic_bookmark_border_black_24dp"
                android:textColor="@color/colorPrimaryLight"
                android:textAllCaps="false" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom|end">

                <Button
                    android:id="@+id/btn_lihat_detail_related"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Lihat Detail"
                    android:background="@null"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="false"
                    android:gravity="bottom"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>